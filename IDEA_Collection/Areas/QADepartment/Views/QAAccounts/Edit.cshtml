@model IDEA_Collection.Models.Account

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/QADepartment/Views/Shared/_QADepartmentLayout.cshtml";
}

<div class="card-body">
    <h4>Update account</h4>
    <div class="m-t-25" style="max-width: 700px">
        <form asp-controller="QAAccounts" asp-action="Edit" asp-route-id="@Model.AccountId" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountId" />
            <input type="hidden" asp-for="CreateDate" />
            <input type="hidden" asp-for="RoleId" />
            <input type="hidden" asp-for="DepartmentId" />
            <input type="hidden" asp-for="Avatar" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Full Name</label>
                    <input type="text" class="form-control" asp-for="FullName" placeholder="Full Name">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Phone</label>
                    <input type="text" class="form-control" asp-for="Phone" placeholder="Phone">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="Email">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Pass word</label>
                    <input type="text" class="form-control" asp-for="Password" placeholder="Password">
                </div>
            </div>
            <div class="form-group">
                <label class="font-weight-semibold" for="productBrand">Thumb</label>
                <input name="fThumb" type="file" class="form-control-file" asp-for="Avatar" />
                <span asp-validation-for="Avatar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <input asp-for="Active" type="checkbox">
                    <label for="Active">Active</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

