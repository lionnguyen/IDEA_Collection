@model IDEA_Collection.Models.Idea

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/QADepartment/Views/Shared/_QADepartmentLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="QADepartment" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="QADepartment" asp-controller="QAIdeas" asp-action="Index" class="breadcrumb-item">List of ideas</a>
            <span class="breadcrumb-item active">Article information : @Model.PostId</span>
        </nav>
    </div>
</div>

<div class="card-body">
    <h4 class="card-title">Article information : @Model.PostId</h4>
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td class="text-dark font-weight-semibold">@Model.PostId</td>
                </tr>
                <tr>
                    <td>Full Name</td>
                    <td>@Model.Account.FullName</td>
                </tr>
                <tr>
                    <td>Category</td>
                    <td>@Model.Cat.CatName</td>
                </tr>
                <tr>
                    <td>Status:</td>
                    <td>
                        @if (Model.Published)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>Anonymous:</td>
                    <td>
                        @if (Model.Anonymously)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>Create Date:</td>
                    <td>@Model.CreatedDate</td>
                </tr>
                <tr>
                    <td>Like:</td>
                    <td>@Model.Likes.ToString()</td>
                </tr>
                <tr>
                    <td>Unlikes:</td>
                    <td>@Model.Unlikes.ToString()</td>
                </tr>
                <tr>
                    <td>Thumb:</td>
                    <td>
                        <img width="200" height="200" src="~/images/ideas/@Model.Thumb" alt="@Model.Title" />
                    </td>
                </tr>
                <tr>
                    <td>Content:</td>
                    <td>@Html.Raw(Model.Contents)</td>
                </tr>
                <tr>
                    <td>Delete comfirm:</td>
                    <td>
                        <form asp-controller="QAIdeas" asp-action="Delete" asp-route-id="@Model.PostId">
                            <input type="hidden" asp-for="PostId" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index">Back to List</a>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
