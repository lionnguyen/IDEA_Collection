@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Department> lsDepartment = ViewBag.lsDepartment;
    List<Idea> lsIdeas = ViewBag.lsIdeas;
    List<Account> lsAccount = ViewBag.lsAccount;
}

<div class="main-content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-md-flex justify-content-between align-items-center">
                        <h4>Total Ideas</h4>

                    </div>
                    <div class="d-md-flex justify-content-between align-items-center">
                        <h5>Goal: 200 ideas/year</h5>
                        <h5>Complete: @lsIdeas.Count() ideas</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Top Department</h4>
                        <div>
                            <a asp-controller="AdminIdeas" asp-action="Index" class="btn btn-sm btn-default">View All</a>
                        </div>
                    </div>
                    <div class="m-t-30">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Department Name</th>
                                        <th>Posts</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (lsDepartment != null && lsDepartment.Count() > 0)
                                    {
                                        for (int i = 0; i < lsDepartment.Count(); i++)
                                        {
                                            <tr>
                                                <td>@lsDepartment[i].DepartmentId</td>
                                                <td>@lsDepartment[i].DepartmentName</td>
                                                <td>@lsIdeas.Count(x=>x.Account.DepartmentId == lsDepartment[i].DepartmentId)</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Top 5 contributors</h4>
                        <div>
                            <a asp-controller="AdminIdeas" asp-action="Index" class="btn btn-sm btn-default">View All</a>
                        </div>
                    </div>
                    <div class="m-t-30">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Full Name</th>
                                        <th>Posts</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (lsAccount != null && lsAccount.Count() > 0)
                                    {
                                        for (int i = 0; i < lsAccount.Count() && i < 5; i++)
                                        {
                                            <tr>
                                                <td>@lsAccount[i].AccountId</td>
                                                <td>@lsAccount[i].FullName</td>
                                                <td>@lsIdeas.Count(x=>x.AccountId == lsAccount[i].AccountId)</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
