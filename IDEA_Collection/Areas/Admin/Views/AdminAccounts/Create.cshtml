@model IDEA_Collection.Models.Account

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body">
    <h4>Create account</h4>
    <div class="m-t-25" style="max-width: 700px">
        <form asp-controller="AdminAccounts" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Full Name</label>
                    <input type="text" class="form-control" asp-for="FullName" placeholder="Full Name">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Phone</label>
                    <input type="text" class="form-control" asp-for="Phone" placeholder="Phone">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="Email">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Pass word</label>
                    <input type="text" class="form-control" asp-for="Password" placeholder="Pass word">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="RoleId">Quyền truy cập</label>
                    <select class="form-control" asp-for="RoleId" asp-items="@ViewBag.Role">
                        <option value="" disabled selected>Select Role</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="DepartmentId">Quyền truy cập</label>
                    <select class="form-control" asp-for="DepartmentId" asp-items="@ViewBag.Department">
                        <option value="" disabled selected>Select Department</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="font-weight-semibold" for="productBrand">Thumb</label>
                <input name="fThumb" type="file" class="form-control-file" asp-for="Avatar" />
                <span asp-validation-for="Avatar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <input asp-for="Active" type="checkbox">
                    <label for="Active">Active</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

