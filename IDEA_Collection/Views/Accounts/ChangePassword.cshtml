@model IDEA_Collection.ModelViews.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-7 order-1"><img class="bg-img-cover bg-center" src="../assets/images/login/1.jpg" alt="looginpage"></div>
        <div class="col-xl-5 p-0">
            <div class="login-card">
                <div>
                    <div><a class="logo text-start" href="index.html"><img class="img-fluid for-light" src="../assets/images/logo/login.png" alt="looginpage"><img class="img-fluid for-dark" src="../assets/images/logo/logo_dark.png" alt="looginpage"></a></div>
                    <div class="login-main">
                        <form class="theme-form" asp-controller="Accounts" asp-action="ChangePassword" method="post">
                            <h4>Change your account</h4>
                            <p>Enter password to change</p>
                            <div class="form-group">
                                <label class="col-form-label">Current password</label>
                                <div class="form-input position-relative">
                                    <input class="form-control" type="password" asp-for="PasswordNow" placeholder="*********">
                                    <div class="show-hide"><span asp-validation-for="PasswordNow" class="show">                         </span></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">New password</label>
                                <div class="form-input position-relative">
                                    <input class="form-control" type="password" asp-for="Password" placeholder="*********">
                                    <div class="show-hide"><span asp-validation-for="Password" class="show">                         </span></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Confirm password</label>
                                <div class="form-input position-relative">
                                    <input class="form-control" type="password" asp-for="ConfirmPassword" placeholder="*********">
                                    <div class="show-hide"><span asp-validation-for="ConfirmPassword" class="show">                         </span></div>
                                </div>
                            </div>
                            <div class="form-group mb-0">
                                <div class="text-end mt-3">
                                    <button class="btn btn-primary btn-block w-100" type="submit">Change password</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

